<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:padding="10dp"
    tools:context="com.enggmartservices.enggmart.activities.SignInSignUp">

    <LinearLayout
        android:id="@+id/guidesline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="EnggMart App Guidelines:-"

            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1. Login/signup through gmail/facebook or register"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Use navigation drawer for:- chat,share, help, about us"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. To share views:- click on +(plus),write views then post it"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. To buy books/tools:- store- click on book image-> choose  book option(new, old, rent),Purchase-> fill details-> place order"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.  For test on GK, Apptitude, Technical- go on Work/Job"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6.  Engg lib:- For Newspaper, CA, Novel, Skill development"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.  Click on: (Right side of Apps)-> Profile, Guideline, logout  "
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/guide_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guidesline"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="#f5f5f5"
        android:text="OK"
        android:textColor="#000000"
        android:textSize="15dp" />

</RelativeLayout>

