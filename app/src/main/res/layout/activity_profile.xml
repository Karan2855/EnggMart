<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ProfileActivity">

    <include layout="@layout/custom_app_bar" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:background="#fff"
        android:gravity="center"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userdpprofile"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@mipmap/usera" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:paddingHorizontal="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:padding="1dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="2dp"
                android:src="@drawable/name" />

            <TextView
                android:id="@+id/nameprofiletv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:background="#fff"
                android:text="example"
                android:textColor="#fff"
                android:visibility="visible" />

            <EditText
                android:id="@+id/nameprofileet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:text="example"
                android:textColor="#fff"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/emailprofiletv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:background="#fff"
                android:text="example@gmail.com"
                android:textColor="#fff"
                android:visibility="visible" />

            <EditText
                android:id="@+id/emailprofileet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:text="example@gmail.com"
                android:textColor="#fff"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/phoneprofiletv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:background="#fff"
                android:text="1234567890"
                android:textColor="#fff"
                android:visibility="visible" />

            <EditText
                android:id="@+id/phoneprofileet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:text="1234567890"
                android:textColor="#000"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/detail" />

            <TextView
                android:id="@+id/detailedprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:background="#fff"
                android:text="Detailed Profile"
                android:textColor="#fff"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/updatepro"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttoncorner"
            android:fontFamily="BOLD"
            android:gravity="center"
            android:text="Update"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>