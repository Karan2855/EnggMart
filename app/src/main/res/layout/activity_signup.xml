<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    android:orientation="vertical"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/larrow" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:text="SIGN UP WITH EMAIL"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/namesignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#534e4e"

            android:textSize="16dp" />

        <EditText

            android:id="@+id/emailsignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:hint="Email"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#534e4e"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/mobnosignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:hint="10 digit Mobile Number"
            android:inputType="phone"
            android:textColor="#000"
            android:textColorHint="#534e4e"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#534e4e"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_sky"
        android:text="Get Started"
        android:textColor="#fff"
        android:textSize="18dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:text="Already have account?"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/logintvsignup"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:text="Login"
            android:textColor="#ed3a0d"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>