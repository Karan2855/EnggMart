<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.enggmartservices.enggmart.activities.PaymentPage">

    <include layout="@layout/custom_app_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_item_payment"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="#fff"
            android:src="@drawable/bookb" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="item_name"
                android:textColor="#000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price to be Paid :"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/price_to_be_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="200"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="20dp"
                    android:text="NEW"
                    android:textColor="#a10909" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/name_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#6b6b6b" />

        <EditText
            android:id="@+id/address_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address With ZipCode"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#6b6b6b" />

        <EditText
            android:id="@+id/landmark_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#6b6b6b" />

        <EditText
            android:id="@+id/contact_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No."
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#6b6b6b" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rent_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rent_policy "
            android:textColor="#3349ab"
            android:visibility="gone" />

        <Button
            android:id="@+id/p_placeorder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#6e9974"
            android:text="Place Order"
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>